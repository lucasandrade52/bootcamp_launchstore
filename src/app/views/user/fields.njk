<div class="item">
    <div>Nome completo</div>
    <div class="input">
        <input 
            type="text" 
            name="name"
            placeholder="Digite seu nome completo"
            value="{{ user.name }}"
            required
        >
    </div>    
</div>

<div class="item">
    <div>E-mail</div>
    <div class="input">
        <input
            type="email" 
            name="email"
            placeholder="Digite seu e-mail"
            value="{{ user.email }}"
            onblur="Validade.aplly(this, 'isEmail')"
        >
    </div>    
</div>

<div class="item">
    <div>Nova Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="password"
            {% if not user.id %}
            placeholder="Escolha uma senha"
            {% else %}
            placeholder="Digite uma nova senha"
            {% endif %}

        >
    </div>    
</div>

{% if not user.id %}
<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat"
            placeholder="Repetir a senha escolhida"
        >
    </div>    
</div>
{% endif %}

<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input 
            type="text" 
            name="cpf_cnpj"
            placeholder="Digite seu documento"
            value="{{ user.cpf_cnpj }}"
            onkeydown="Mask.apply(this, 'cpfCnpj')"
            onblur="Validade.aplly(this, 'isCpfCnpj')"
        >
    </div>    
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input 
            type="text" 
            name="cep"
            placeholder="99999-999"
            value="{{ user.cep }}"
            onkeydown="Mask.apply(this, 'cep')"
            onblur="Validade.aplly(this, 'isCep')"
        >
    </div>    
</div>

<div class="item">
    <div>Endereço Completo</div>
    <div class="input">
        <input 
            type="text" 
            name="address"
            placeholder="Digite seu endereço"
            value="{{ user.address }}"
        >
    </div>    
</div>